<Window x:Class="MultifunctionalDictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultifunctionalDictionary"
        mc:Ignorable="d"
        Title="Multi-functional Dictionary" Height="450" Width="800"
        Icon="bibleIcon.ico">
    <Grid>
        <Grid Margin="0">
            <TabControl x:Name="tabControl" Margin="0" TabStripPlacement="Bottom">
                <TabItem Header="Home">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="389*"/>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label" Content="Multi-functional Dictionary" Margin="228,11,263,0" FontFamily="Old English Text MT" FontSize="20" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                                    <SkewTransform AngleY="0" AngleX="0"/>
                                    <RotateTransform Angle="0"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <ComboBox x:Name="bookSelector" HorizontalAlignment="Left" Margin="16,64,0,0" VerticalAlignment="Top" Width="166" SelectionChanged="BookSelector_SelectionChanged" Grid.Column="1"/>
                        <Button x:Name="button" Content="Search" HorizontalAlignment="Right" Margin="0,20,10,0" VerticalAlignment="Top" Width="56" Grid.Column="1"/>
                        <ComboBox x:Name="chapterSelector" HorizontalAlignment="Left" Margin="204,64,0,0" VerticalAlignment="Top" Width="166" Grid.Column="1"/>
                        <ComboBox x:Name="verseSelector" HorizontalAlignment="Left" Margin="410,64,0,0" VerticalAlignment="Top" Width="166" Grid.Column="1"/>
                        <Grid HorizontalAlignment="Left" Height="100" Margin="38.766,213,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
                        <TextBox x:Name="homeSearch" HorizontalAlignment="Right" Height="23" Margin="0,20,91,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" Grid.Column="1"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Search">
                    <Grid Background="#FFE5E5E5">
                        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="140,39,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="369"/>
                        <Button x:Name="SearchButton" Content="Advanced Search" HorizontalAlignment="Left" Margin="545,38,0,0" VerticalAlignment="Top" Width="120"/>
                        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="198" Margin="45,155,0,0" VerticalAlignment="Top" Width="667"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Import">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</Window>
